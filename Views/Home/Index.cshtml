@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/chat.css" />

@section Scripts {
    <script src="~/js/index.js"></script>
}

<div id="chatDialog" title="Chat with support" class="disconnected">
    <div id="chatWelcomePanel">
        <h4 class="text-center">Want to chat with us?</h4>
        <form id="chatConnectForm">
            <p class="text-center">
                <input type="text" maxlength="50" placeholder="Enter your name" />
            </p>

            <p class="text-center">
                <button class="btn btn-primary" type="submit">Connect</button>
            </p>
        </form>
    </div>
    <div id="chatConnectionInfo">
        <strong>Connecting...</strong>
    </div>
    <div id="chatMainPanel">
        <ul id="chatHistory"></ul>
        <div id="bottomPanel">
            <form id="chatForm">
                <input id="messageTextbox" maxlength="50" type="text" placeholder="Type a message" />
                <button type="submit">Send</button>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Secure Software Development - Group 6</h1>
    <h4>Main features: </h4>
    <p><span class="font-weight-bold">Blogging</span> - Create and Read blog (only authorized user can create a new post)</p>
    <p><span class="font-weight-bold">Identity</span> - Implement the ASP.NET Core Identity System</p>
    <p><span class="font-weight-bold">Real-time chat dialog</span> - Implement the SignalR library</p>
</div>

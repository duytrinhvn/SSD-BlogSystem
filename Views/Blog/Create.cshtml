@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Post

<h1>Create Blog Post</h1>

<fieldset>
    <form asp-action="Create" asp-controller="Blog">
        <div class="text-danger" asp-validation-summary="ModelOnly" class="input-validation-error"></div>

        <p>
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" placeholder="Blog post title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </p>

        <p>
            <label asp-for="Body"></label>
            <textarea asp-for="Body" class="form-control" placeholder="Blog post content"></textarea>
            <span class="text-danger" asp-validation-for="Body"></span>
        </p>

        <p>
            <button type="submit">Create Post</button>
        </p>
    </form>
</fieldset>